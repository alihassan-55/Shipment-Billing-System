generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String      @id @default(uuid())
  name         String
  email        String      @unique
  passwordHash String
  role         String
  isActive     Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  shipments    shipments[]
}

model Customer {
  id             String         @id @default(uuid())
  name           String
  company        String?
  email          String?
  phone          String?
  // Shipper-specific fields
  personName     String?        // For shipper functionality
  address        String?        // For shipper functionality
  city           String?        // For shipper functionality
  country        String?        @default("Pakistan") // For shipper functionality
  cnic           String?        // For shipper functionality
  ntn            String?        // For shipper functionality
  // Financial tracking fields
  ledgerBalance  Float          @default(0)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @default(now()) @updatedAt // Added default value
  addresses      Address[]
  invoices       Invoice[]
  payments        Payment[]
  ledgerEntries  LedgerEntry[]
  shipments       shipments[]    // As shipper
}

model Address {
  id         String   @id @default(uuid())
  customerId String
  type       String
  line1      String
  line2      String?
  city       String
  state      String?
  postalCode String?
  country    String
  customer   Customer @relation(fields: [customerId], references: [id])
}

model ShipmentEvent {
  id          String    @id @default(uuid())
  shipmentId  String
  eventType   String
  description String?
  location    String?
  occurredAt  DateTime
  recordedBy  String?
  shipment    shipments @relation(fields: [shipmentId], references: [id])
}

model Invoice {
  id            String            @id @default(uuid())
  invoiceNumber String            @unique
  customerId    String
  issuedDate    DateTime
  dueDate       DateTime?
  subtotal      Float
  tax           Float
  total         Float
  amountPaid    Float             @default(0)
  balanceDue    Float             @default(0)
  currency      String            @default("PKR")
  status        InvoiceStatus     @default(DRAFT)
  pdfPath       String?
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  customer      Customer          @relation(fields: [customerId], references: [id])
  lineItems     InvoiceLineItem[]
  payments      Payment[]
}

model InvoiceLineItem {
  id          String  @id @default(uuid())
  invoiceId   String
  description String?
  quantity    Int     @default(1)
  unitPrice   Float
  total       Float
  invoice     Invoice @relation(fields: [invoiceId], references: [id])
}

model Payment {
  id          String       @id @default(uuid())
  invoiceId   String
  customerId  String?
  amount      Float
  paymentType PaymentType? @default(CASH)
  notes       String?
  reference   String?
  receivedBy  String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  invoice     Invoice      @relation(fields: [invoiceId], references: [id])
  customer    Customer?    @relation(fields: [customerId], references: [id])
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     String
  entityType String
  entityId   String
  action     String
  oldData    Json?
  newData    Json?
  createdAt  DateTime @default(now())
}

model billing_invoices {
  id                String    @id
  shipmentId        String    @unique
  ratePerKg         Float?
  totalRate         Float?
  eFormCharges      Float     @default(0)
  remoteAreaCharges Float     @default(0)
  boxCharges        Float     @default(0)
  grandTotal        Float
  paymentMethod     String
  customerAccountId String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime
  shipments         shipments @relation(fields: [shipmentId], references: [id])
}

model consignees {
  id         String      @id
  personName String
  phone      String
  address    String
  city       String
  country    String
  email      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime
  shipments  shipments[]
}

model LedgerEntry {
  id            String        @id @default(uuid())
  customerId    String
  referenceId   String?        // Invoice ID or Payment ID
  entryType     LedgerEntryType
  description   String
  debit         Float         @default(0)
  credit        Float         @default(0)
  balanceAfter  Float?        // Make optional initially
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  customer      Customer      @relation(fields: [customerId], references: [id])
}

model product_invoice_items {
  id          String    @id
  shipmentId  String
  boxIndex    Int
  description String
  hsCode      String
  pieces      Int
  unitValue   Float
  total       Float
  createdAt   DateTime  @default(now())
  shipments   shipments @relation(fields: [shipmentId], references: [id])
}

model service_providers {
  id        String      @id
  name      String      @unique
  createdAt DateTime    @default(now())
  shipments shipments[]
}

model shipment_boxes {
  id                 String    @id
  shipmentId         String
  index              Int
  lengthCm           Float
  widthCm            Float
  heightCm           Float
  volumetricWeightKg Float
  actualWeightKg     Float?
  createdAt          DateTime  @default(now())
  shipments          shipments @relation(fields: [shipmentId], references: [id])
}

model shipments {
  id                    String                  @id
  referenceNumber       String                  @unique
  airwayBillNumber      String?
  serviceProviderId     String
  customerId            String?                 // Made optional initially for migration
  consigneeId           String
  terms                 String
  actualWeightKg        Float
  volumeWeightKg        Float
  chargedWeightKg       Float
  customsValue          Float?
  status                String                  @default("Draft")
  bookedAt              DateTime                @default(now())
  expectedDelivery      DateTime?
  deliveredAt           DateTime?
  createdById           String
  updatedAt             DateTime
  events                ShipmentEvent[]
  billing_invoices      billing_invoices?
  product_invoice_items product_invoice_items[]
  shipment_boxes        shipment_boxes[]
  shipment_invoices      shipment_invoices[]
  consignees            consignees              @relation(fields: [consigneeId], references: [id])
  User                  User                    @relation(fields: [createdById], references: [id])
  service_providers     service_providers       @relation(fields: [serviceProviderId], references: [id])
  Customer              Customer?               @relation(fields: [customerId], references: [id])
}

model shipment_invoices {
  id                String                      @id @default(uuid())
  invoiceNumber     String                      @unique
  type              InvoiceType
  shipmentId        String
  customerAccountId String?
  subtotal          Float
  tax               Float                       @default(0)
  total             Float
  currency          String                      @default("PKR")
  status            InvoiceStatus               @default(DRAFT)
  postedLedgerEntryId String?
  issuedAt          DateTime                    @default(now())
  pdfUrl            String?
  createdAt         DateTime                    @default(now())
  updatedAt         DateTime                    @updatedAt
  shipments         shipments                   @relation(fields: [shipmentId], references: [id])
  lineItems         shipment_invoice_line_items[]
}

model shipment_invoice_line_items {
  id                String              @id @default(uuid())
  shipmentInvoiceId String
  description       String
  quantity          Int?
  unitPrice         Float?
  total             Float
  createdAt         DateTime            @default(now())
  shipment_invoices shipment_invoices   @relation(fields: [shipmentInvoiceId], references: [id])
}

enum InvoiceType {
  DECLARED_VALUE
  BILLING
}

enum InvoiceStatus {
  DRAFT
  UNPAID
  PARTIAL
  PAID
}

enum PaymentType {
  CASH
  BANK_TRANSFER
  ONLINE
  CREDIT
  CHEQUE
}

enum LedgerEntryType {
  INVOICE
  PAYMENT
  ADJUSTMENT
  REFUND
}

