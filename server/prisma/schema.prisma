generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id           String      @id @default(uuid())
  name         String
  email        String      @unique
  passwordHash String
  role         Role        @default(EMPLOYEE)
  isActive     Boolean     @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  shipments    shipments[]
}

enum Role {
  ADMIN
  EMPLOYEE
  USER
}

model Customer {
  id            String        @id @default(uuid())
  name          String
  company       String?
  email         String?
  phone         String?
  createdAt     DateTime      @default(now())
  address       String?
  city          String?
  cnic          String?
  country       String?       @default("Pakistan")
  ntn           String?
  personName    String?
  updatedAt     DateTime      @default(now()) @updatedAt
  ledgerBalance Float         @default(0)
  addresses     Address[]
  invoices      Invoice[]
  ledgerEntries LedgerEntry[]
  payments      Payment[]
  shipments     shipments[]
}

model Address {
  id         String   @id @default(uuid())
  customerId String
  type       String
  line1      String
  line2      String?
  city       String
  state      String?
  postalCode String?
  country    String
  customer   Customer @relation(fields: [customerId], references: [id])
}

model ShipmentEvent {
  id          String    @id @default(uuid())
  shipmentId  String
  eventType   String
  description String?
  location    String?
  occurredAt  DateTime
  recordedBy  String?
  shipment    shipments @relation(fields: [shipmentId], references: [id])
}

model Invoice {
  id            String            @id @default(uuid())
  invoiceNumber String            @unique
  customerId    String
  issuedDate    DateTime
  dueDate       DateTime?
  subtotal      Float
  tax           Float
  total         Float
  currency      String            @default("Rs")
  pdfPath       String?
  amountPaid    Float             @default(0)
  balanceDue    Float             @default(0)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  status        InvoiceStatus     @default(DRAFT)
  customer      Customer          @relation(fields: [customerId], references: [id])
  lineItems     InvoiceLineItem[]
  payments      Payment[]
}

model InvoiceLineItem {
  id          String  @id @default(uuid())
  invoiceId   String
  description String?
  quantity    Int     @default(1)
  unitPrice   Float
  total       Float
  invoice     Invoice @relation(fields: [invoiceId], references: [id])
}

model Payment {
  id          String       @id @default(uuid())
  invoiceId   String?
  amount      Float
  reference   String?
  receivedBy  String?
  createdAt   DateTime     @default(now())
  customerId  String?
  notes       String?
  paymentType PaymentType? @default(CASH)
  updatedAt   DateTime     @updatedAt
  customer    Customer?    @relation(fields: [customerId], references: [id])
  invoice     Invoice?     @relation(fields: [invoiceId], references: [id])
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     String
  entityType String
  entityId   String
  action     String
  oldData    Json?
  newData    Json?
  createdAt  DateTime @default(now())
}

model billing_invoices {
  id                String    @id
  shipmentId        String    @unique
  ratePerKg         Float?
  totalRate         Float?
  eFormCharges      Float     @default(0)
  remoteAreaCharges Float     @default(0)
  boxCharges        Float     @default(0)
  grandTotal        Float
  paymentMethod     String
  customerAccountId String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime
  cashAmount        Float     @default(0)
  shipments         shipments @relation(fields: [shipmentId], references: [id])
}

model consignees {
  id         String      @id
  personName String
  phone      String
  address    String
  city       String
  country    String
  email      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime
  shipments  shipments[]
}

model LedgerEntry {
  id           String          @id @default(uuid())
  customerId   String
  referenceId  String?
  entryType    LedgerEntryType
  description  String
  debit        Float           @default(0)
  credit       Float           @default(0)
  balanceAfter Float?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  customer     Customer        @relation(fields: [customerId], references: [id])
}

model product_invoice_items {
  id          String    @id
  shipmentId  String
  boxIndex    Int
  description String
  hsCode      String
  pieces      Int
  unitValue   Float
  total       Float
  createdAt   DateTime  @default(now())
  shipments   shipments @relation(fields: [shipmentId], references: [id])
}

model service_providers {
  id        String      @id
  name      String      @unique
  createdAt DateTime    @default(now())
  shipments shipments[]
}

model shipment_boxes {
  id                 String    @id
  shipmentId         String
  index              Int
  lengthCm           Float
  widthCm            Float
  heightCm           Float
  volumetricWeightKg Float
  actualWeightKg     Float?
  createdAt          DateTime  @default(now())
  shipments          shipments @relation(fields: [shipmentId], references: [id])
}

model shipments {
  id                    String                  @id
  referenceNumber       String                  @unique
  airwayBillNumber      String?
  serviceProviderId     String
  consigneeId           String
  terms                 String
  actualWeightKg        Float
  volumeWeightKg        Float
  chargedWeightKg       Float
  customsValue          Float?
  status                String                  @default("Draft")
  bookedAt              DateTime                @default(now())
  expectedDelivery      DateTime?
  deliveredAt           DateTime?
  createdById           String
  updatedAt             DateTime
  customerId            String?
  events                ShipmentEvent[]
  billing_invoices      billing_invoices?
  product_invoice_items product_invoice_items[]
  shipment_boxes        shipment_boxes[]
  shipment_invoices     shipment_invoices[]
  consignees            consignees              @relation(fields: [consigneeId], references: [id])
  User                  User                    @relation(fields: [createdById], references: [id])
  Customer              Customer?               @relation(fields: [customerId], references: [id])
  service_providers     service_providers       @relation(fields: [serviceProviderId], references: [id])
}

model shipment_invoices {
  id                  String                        @id @default(uuid())
  invoiceNumber       String                        @unique
  type                InvoiceType
  shipmentId          String
  customerAccountId   String?
  subtotal            Float
  tax                 Float                         @default(0)
  total               Float
  currency            String                        @default("Rs")
  status              InvoiceStatus                 @default(DRAFT)
  postedLedgerEntryId String?
  issuedAt            DateTime                      @default(now())
  pdfUrl              String?
  createdAt           DateTime                      @default(now())
  updatedAt           DateTime                      @updatedAt
  lineItems           shipment_invoice_line_items[]
  shipments           shipments                     @relation(fields: [shipmentId], references: [id])
}

model shipment_invoice_line_items {
  id                String            @id @default(uuid())
  shipmentInvoiceId String
  description       String
  quantity          Int?
  unitPrice         Float?
  total             Float
  createdAt         DateTime          @default(now())
  shipment_invoices shipment_invoices @relation(fields: [shipmentInvoiceId], references: [id])
}

enum InvoiceType {
  DECLARED_VALUE
  BILLING
}

enum InvoiceStatus {
  DRAFT
  UNPAID
  PARTIAL
  PAID
  ADD_TO_LEDGER
}

enum PaymentType {
  CASH
  BANK_TRANSFER
  ONLINE
  CREDIT
  CHEQUE
}

enum LedgerEntryType {
  INVOICE
  PAYMENT
  ADJUSTMENT
  REFUND
}
